<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_ll_welcome"
    tools:context=".presenter.UpImage">
    <TextView
        android:id="@+id/tvHeader"
        android:gravity="center"
        style="@style/welcome_text_large"
        android:drawableLeft="@drawable/ic_logo_24dp"
        android:text="Hãy chọn những bức ảnh đẹp nhất của bạn"
       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ScrollView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:padding="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv1"
            android:src="@drawable/ic_add"
            android:background="@drawable/btn_up_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"/>
        <ImageView
            android:id="@+id/iv2"
            android:layout_marginLeft="6dp"
            android:background="@drawable/btn_up_image"
            android:src="@drawable/ic_add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"/>
    </LinearLayout>
    <LinearLayout
        android:padding="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_add"
            android:background="@drawable/btn_up_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"/>
        <ImageView
            android:id="@+id/iv4"
            android:layout_marginLeft="6dp"
            android:background="@drawable/btn_up_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"/>
    </LinearLayout>
    <LinearLayout
        android:padding="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_add"
            android:background="@drawable/btn_up_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"/>
        <ImageView
            android:id="@+id/iv6"
            android:layout_marginLeft="6dp"
            android:background="@drawable/btn_up_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"/>
    </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnHoanThanh"
        android:textColor="@color/black_text"
        android:text="Hoàn thành"
        style="@style/btn_start_activity"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>