<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_boder"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.cardview.widget.CardView
            android:layout_marginStart="4dp"
            app:cardCornerRadius="40dp"
            android:layout_height="46dp"
            android:layout_width="46dp">
            <ImageView
                android:id="@+id/ivImageUserDiary"
                android:src="@drawable/ic_person"
                android:layout_height="46dp"
                android:layout_width="46dp"/>
        </androidx.cardview.widget.CardView>
        <TextView
        android:id="@+id/tvNameUserDiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingLeft="6dp"
        android:text="Name"
        android:textSize="16sp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tvDateDiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingLeft="6dp"
        android:layout_gravity="center_vertical"
        android:text="Time"
        android:textSize="12sp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/llHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/gray"/>
<TextView
    android:id="@+id/tvContentDiary"
    android:textSize="16sp"
    android:paddingTop="4dp"
    android:paddingEnd="4dp"
    android:paddingBottom="4dp"
    android:paddingStart="10dp"
    android:text="Hôm nya trời đẹp thế"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/llHeader"
    />
    <ImageView
        android:id="@+id/ivImageDiary"
        android:src="@drawable/anh3"
        android:layout_width="match_parent"
        android:layout_height="350dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvContentDiary"
        app:layout_constraintBottom_toTopOf="@+id/v"
        />

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/ivImageDiary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        />
    <LinearLayout
        android:id="@+id/llCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/v"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cbLike"
                android:layout_marginLeft="20sp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:button="@drawable/cb_selector"
                android:textColor="@color/pink"
                android:text="Thích"
                android:textSize="16sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/gray"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tvComment"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Bình luận"
            android:textSize="16sp"
            android:gravity="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>