<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_pink"
    android:padding="16dp"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btnBack"
        style="@style/btnBack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageView
        android:layout_marginTop="60dp"
        android:id="@+id/logo_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_logo_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        ></ImageView>
    <TextView
        android:id="@+id/logo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello there, Welcome Back"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:padding="10dp"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toBottomOf="@+id/logo_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        ></TextView>
    <TextView
        android:id="@+id/tvsign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In to continue"
        android:textSize="15dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/logo_name"
        app:layout_constraintStart_toStartOf="parent"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvsign">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/myEditTextStyle"
            android:textColorHint="@color/white"
            android:hint="UserName">
            <com.google.android.material.textfield.TextInputEditText
                android:theme="@style/myEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white_green"
                android:textSize="@dimen/text_size_register"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edtPassWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PassWord"
            android:theme="@style/myEditTextStyle"
            android:textColorHint="@color/white"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="@dimen/text_size_register"
                android:textColor="@color/white_green" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/tvErrorMessage"
            android:text="@string/Error_message"
            android:drawableLeft="@drawable/ic_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:text="Forget PassWord?"
            android:textStyle="italic"
            android:textSize="12sp"/>
        <Button
            android:id="@+id/btnLogin"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp"
            android:background="@drawable/btn_click_sart_activity"
            android:padding="8dp"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
