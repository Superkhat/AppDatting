<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <LinearLayout
      android:padding="6dp"
      android:id="@+id/llTake"
      android:visibility="gone"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="6dp"
        android:id="@+id/cvImageUser"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:cardCornerRadius="40dp">
        <ImageView
            android:id="@+id/ivUserContentChatTake"
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </androidx.cardview.widget.CardView>
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
    <TextView
        android:padding="6dp"
        android:id="@+id/tvContentChatTake"
        android:text="chao xin "
        android:textSize="16sp"
        android:layout_marginStart="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvTimeContentChatTake"
        android:text="12h11"
        android:textSize="10sp"
        android:layout_marginStart="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
      </LinearLayout>
  </LinearLayout>
    <LinearLayout
        android:padding="6dp"
        android:id="@+id/llSend"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_gravity="right"
        android:id="@+id/tvContentChatSend"
        android:text="Take fsd gsdgdfgdfhgfhdf"
        android:textSize="16sp"
        android:padding="6dp"
        android:layout_marginEnd="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_gravity="right"
        android:id="@+id/tvTimeContentChatSend"
        android:text="123232"
        android:textSize="10sp"
        android:layout_marginEnd="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>