<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white_green"
    android:layout_marginTop="?attr/actionBarSize"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:cardCornerRadius="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
<ImageView
    android:id="@+id/ivImageUser"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@drawable/background_pink"
    />
    </androidx.cardview.widget.CardView>
    <TextView
        android:padding="6dp"
        android:gravity="center"
        android:id="@+id/tvNameUser"
        style="@style/welcome_text_large"
        app:layout_constraintTop_toBottomOf="@+id/ivImageUser"
        android:text="Name"
        android:textSize="18sp"
        android:background="@color/white_green"
       />
    <TextView
        android:padding="6dp"
        android:gravity="center"
        android:id="@+id/tvAge"
        style="@style/welcome_text_large"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/ivImageUser"
        android:text="Age"
        android:textSize="18sp"
        android:background="@color/white_green"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"/>
    <TextView
        android:padding="6dp"
        android:gravity="center"
        android:id="@+id/tvChamNgonSong"
        style="@style/welcome_text_large"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/ivImageUser"
        android:text="Cham ngon song "
        android:textSize="18sp"
        android:background="@color/white_green"
        />
    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        android:layout_width="200dp"
        android:layout_height="40dp">
        <Button
            android:id="@+id/btnXemThem"
            android:background="@drawable/btn_click_sart_activity"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="xem thÃªm"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>